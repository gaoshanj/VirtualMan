# 复制此文件为 `.env` 并填充您的实际值
# Copy this file to `.env` and fill values before running the backend

# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://<your-openai-endpoint>.openai.azure.com/
AZURE_OPENAI_KEY=<your-openai-key>
AZURE_OPENAI_DEPLOYMENT=<your-deployment-name>

# Azure Speech Configuration (for Real-time Avatar with WebRTC)
AZURE_SPEECH_REGION=swedencentral
AZURE_SPEECH_ENDPOINT=https://<region>.api.cognitiveservices.azure.com
AZURE_SPEECH_KEY=<your-speech-key>
AZURE_SPEECH_AVATAR=lisa
AZURE_SPEECH_AVATAR_STYLE=casual-sitting
AZURE_SPEECH_VOICE=zh-CN-XiaoxiaoNeural
